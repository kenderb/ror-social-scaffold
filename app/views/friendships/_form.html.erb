<%= form_with (model: @friendship, url: friendships_path) do |form| %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :friend_id, value: user.id %>
    <%= form.hidden_field :confirmed, value: false %>
    <%= button_to "Add this one", { action: "new", controller:"friendships" }%>
<% end %> 